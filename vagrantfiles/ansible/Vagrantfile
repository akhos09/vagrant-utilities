Vagrant.configure("2") do |config|
    config.vm.box = "ubuntu/focal64"
    config.vm.box_version = "20240821.0.1"  
    config.vm.provider "virtualbox" do |vb| # vb as hypervisor
        vb.memory = "4096"
        vb.cpus = 2
  end

  config.vm.define "nodom" do |nodom|
    nodom.vm.network "private_network", ip:"192.168.30.3", netmask: "255.255.255.0"
     nodom.vm.provision "shell", path: "pythonins.sh"
  end
  config.vm.define "nodo1" do |nodo1|
    nodo1.vm.network "private_network", ip:"192.168.30.4", netmask:"255.255.255.0"
    nodo1.vb.name ="nodo1"
  end
  config.vm.define "nodo2" do |nodo2|
    nodo2.vm.network "private_network", ip:"192.168.30.5", netmask:"255.255.255.0"
    nodo2.vb.name ="nodo2"
  end
  config.vm.define "nodo3" do |nodo3|
    nodo3.vm.network "private_network", ip:"192.168.30.6", netmask:"255.255.255.0"
    nodo3.vb.name ="nodo3"
  end

end